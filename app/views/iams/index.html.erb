<h1>Listing IAM Groups</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Group Names</th>
    </tr>
  </thead>

  <tbody>
    <% @iams.each do |iam| %>
      <tr>
        <td><%= iam.name %></td>
        <td><%= link_to 'Show', "/show_group/#{iam.name}" %></td>
        <td><%= link_to 'Destroy', iam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
   <tr>
      <th>User Names</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>

   <tr>
      <th>Roles</th>
    </tr>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.id2name %></td>
        <td><%= link_to 'Policy', "/show_role_policy/#{role}" %></td>
      </tr>
    <% end %> 

  </tbody>
</table>
