<h1>Listing IAM Groups</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Group Names</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @iams.each do |iam| %>
      <tr>
        <td><%= iam.name %></td>
        <td><%= link_to 'Show', "/show_group/#{iam.name}" %></td>
        <td><%= link_to 'Destroy', iam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <tr>
      <th>User Names</th>
      <th colspan="3"></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', "/show_group/#{user.name}" %></td>
      </tr>
    <% end %>
<br>
  </tbody>
</table>
