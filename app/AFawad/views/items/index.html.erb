<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item %></td>
        <td><%= image_tag @bucket.url_for(item.key, bucket, :authenticated => false) %> </td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Destroy', "/delete_item/#{item.key}", data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
