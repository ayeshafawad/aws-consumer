<h1>Listing Emails</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr><td> <h3>Verified Addresses: </h3> </td> </tr>
          <% if @status %>
               <tr><td> Identity:  <%=  @identity.identity %> </td></tr>
               <tr><td> Status:    <%=  @status %> </td></tr>
             <% else %>
              <tr><td> <%= "None" %> </td></tr> 
           <% end %> 

    <tr>
      <td> <h3> Tried to Verify Email Addresses: </h3> </td>
    </tr>  
    <tr>
      <th colspan="3"></th> 
       <tr><td> <%= @email %></td></tr>
    </tr>
  </thead>

  <tbody>
    <tr>
      <tr>
        <td> <h3>Quota: </h3> </td>
      </tr>
      <tr>  
        <td> <%= @quota %> </td>
      </tr>
    </tr>  
    <tr>
      <td> <h3>Statistics: </h3> </td>
      <% @statistics.each do |stats| %>
        <tr>
          <tr><td><%= "Sent: #{stats[:sent]}" %></td></tr>
          <tr><td><%= "Delivery Attempts: #{stats[:delivery_attempts]}" %></td></tr>
          <tr><td><%= "Rejects: #{stats[:rejects]}" %></td></tr>
          <tr><td><%= "Bounces: #{stats[:bounces]}" %></td></tr>
          <tr><td><%= "Complaints: #{stats[:complaints]}" %></td> </tr>
        </tr>
    <% end %>
    </tr>
           
  </tbody> 
</table>
<br>
<%= link_to 'Verify a new Email Address', "/verify_email/#{@status}" %>
<br><br>
<%= link_to 'Send an Email', "/send_email/#{@email[0]}" %>
<br><br>
<%= link_to 'Back', root_path %>
